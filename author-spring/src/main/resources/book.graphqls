type Book {
	id: ID!
	title: String!
	author: Author!
	description: Description String
}

extend type Query {
	findAllBooks: [Book]!
	countBooks: Long!
}

extend type Mutation {
	createBook(title: String!, author: ID!, description: Description String): Book!
	updateBook(id: ID!, title: String, description: Description String): Book!
	deleteBook(id: ID!): Boolean
}